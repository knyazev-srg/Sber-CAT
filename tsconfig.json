{
  "compilerOptions": {
    "outDir": "./public",
    "module": "commonjs",
    "target": "es2020",
    "noEmit": true,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "rootDir": "./src",
    "baseUrl": "/src",
    "typeRoots": ["./node_modules/@types", "src/shared/types/global.d.ts"],
    "declaration": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
  },
  "include": ["src/**/*"]
}